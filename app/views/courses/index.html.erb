<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th>Category</th>
      <th>Format</th>
      <th>Hours</th>
      <th>Cost</th>
      <th>CFE</th>
      <th>CISA</th>
      <th>CIA</th>
      <th>CPA</th>
      <th>Certificate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.date %></td>
        <td><%= link_to course.name, course %></td>
        <td><%= course.category %></td>
        <td><%= course.format %></td>
        <td><%= course.hours %></td>
        <td>$<%= course.cost.to_i %></td>
        <td>
          <% if course.cfe == true %>
            Yes
          <% else %>
            No
          <% end %>
        </td>
        <td>
          <% if course.cisa == true %>
            Yes
          <% else %>
            No
          <% end %>
        </td>
        <td>
          <% if course.cia == true %>
            Yes
          <% else %>
            No
          <% end %>
        </td>
        <td>
          <% if course.cpa == true %>
            Yes
          <% else %>
            No
          <% end %>
        </td>
        <td>
          <% if course.certificate.attached? %>
            <%= link_to "Certificate", url_for(course.certificate) %>
          <% else %>
            No
          <% end %>
        </td>
      </tr>
    <% end %>
    <% if @courses.length >= 1 %>
      <td> </td>
      <td> </td>
      <td> </td>
      <td> </td>
      <td> Total Hours: <%= @courses.sum(&:hours) %></td>
      <td> Total Cost: $<%= @courses.sum(&:cost).to_i %></td>
      <td> </td>
      <td> </td>
      <td> </td>
      <td> </td>
      <td> </td>
      <td> </td>
      <td> </td>
    <% end %>
  </tbody>
</table>