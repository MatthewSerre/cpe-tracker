<%= form_with(model: course, local: true) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
        <% course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">

  <div class="form-group row">
    <%= form.label :name, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
    <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :description, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
    <%= form.text_area :description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :trainer, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :trainer_name, list: "trainers_autocomplete", class: "form-control" %>
      <datalist id="trainers_autocomplete">
        <% Trainer.all.each do |trainer| %>
          <option value="<%= trainer.name %>">
        <% end %>
      </datalist>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :date %>
    <%= form.date_select :date %>
  </div>

  <div class="form-group row">
    <%= form.label :hours %>
    <%= form.number_field :hours %>
  </div>

  <div class="form-group row">
    <%= form.label :location %>
    <%= form.text_field :location %>
  </div>

  <div class="form-group row">
    <%= form.label :sponsor %>
    <%= form.text_field :sponsor %>
  </div>

  <div class="form-group row">
    <%= form.label :format %>
    <%= form.text_field :format %>
  </div>

  <div class="form-group row">
    <%= form.label :cost %>
    <%= form.text_field :cost %>
  </div>

  <div class="form-group row">
    <%= form.label :cpa %>
    <%= form.check_box :cpa %>
  </div>

  <div class="form-group row">
    <%= form.label :cia %>
    <%= form.check_box :cia %>
  </div>

  <div class="form-group row">
    <%= form.label :cfe %>
    <%= form.check_box :cfe %>
  </div>

  <div class="form-group row">
    <%= form.label :cisa %>
    <%= form.check_box :cisa %>
  </div>

  <div class="form-group row">
    <%= form.label :category %>
    <%= form.text_field :category %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

  </div>
<% end %>
