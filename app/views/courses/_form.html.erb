  <div class="form-group row">
    <%= form.label :certification, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
        <div class="form-check">
          <%= form.check_box :cfe,{class:"form-check-input", type:"checkbox"}, true, false %>
          <%= form.label :cfe,'Certified Fraud Examiner (CFE)', class:"form-check-label" %>
        </div>
        <div class="form-check">
          <%= form.check_box :cisa,{class:"form-check-input", type:"checkbox"}, true, false %>
          <%= form.label :cisa,'Certified Information Systems Auditor (CISA)', class:"form-check-label" %>
        </div>
      <div class="form-check">
        <%= form.check_box :cia,{class:"form-check-input", type:"checkbox"}, true, false %>
        <%= form.label :cia,'Certified Internal Auditor (CIA)', class:"form-check-label" %>
      </div>
      <div class="form-check">
        <%= form.check_box :cpa,{class:"form-check-input", type:"checkbox"}, true, false %>
        <%= form.label :cpa,'Certified Public Accountant (CPA)', class:"form-check-label" %>
      </div>
    </div>
  </div>
  
  <div class="form-group row">
    <%= form.label :category, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
    <%= form.text_field :category, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :certificate, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
    <%= form.file_field :certificate %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

  </div>
<% end %>
